@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <!-- Use Unicode character encoding - multi-language compatibity -->
    <meta charset="utf-8">

    <!-- Set the initial view zooming scale for mobile device -->
    <meta name="viewport" content="width = device-width,
 initial-scale = 1" />

    <title>Lion City Airlines</title>

    <!-- Reference to customized styling for this website -->
    <link rel="stylesheet" type="text/css" href="~/css/Site.css">
</head>
<body>
    <div class="container" id="mainContainer">
        <!-- 1st row -->
        <div class="flex-container">
            <!-- Flexbox for logo, auto-expand in the container -->
            
            <!-- Flexbox for staff login -->
            <div style="width:100%;text-align:right;">
                <form method="post" action="~/Home/AdminLogin">
                    <fieldset class="loginFieldset">
                        <h1 class="homeTitle">Lion City Airlines</h1>
                        <label for="txtLoginID">Login ID:</label>
                        <input type="email" name="txtLoginID"
                               id="txtLoginID" required />&nbsp;
                        <label for="txtPassword">Password:</label>
                        <input type="password" name="txtPassword"
                               id="txtPassword" style="width:100px"
                               required />
                        <input type="submit" id="btnStaffLogin"
                               class="myButton" value="Login" />
                        <br />
                        <span style="color:red;">@TempData["Message"]</span>
                    </fieldset>
                </form>
            </div>
            <!-- Flexbox for student login -->
            
        </div>
        <!-- 2nd row -->
        <div>
            <div style="text-align: center;">
                <p>
                    <img id="imgLogo" src="~/images/web-background.png"
                         style="width: 500px; height:500px;" />
                </p>
            </div>
        </div>
    </div>
</body>
</html>