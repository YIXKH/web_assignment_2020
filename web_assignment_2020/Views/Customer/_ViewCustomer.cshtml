@model IEnumerable<web_assignment_2020.Models.Customer>

@if (Model.ToList().Count > 0)
{
    <div class="table-responsive">
        <table id="viewStaff" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Nationality</th>
                    <th>Birth Date</th>
                    <th>Telephone No.</th>
                    <th>Email Address</th>
                    <th>Password</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CustomerID.ToString()</td>
                        <td>@item.CustomerName</td>
                        <td>
                            @item.Nationality
                        </td>
                        <td>@item.BirthDate</td>
                        <td>@item.TelNo</td>
                        <td>@item.EmailAddr</td>
                        <td>@item.Password</td>
                        <td>
                            <a asp-action="Edit" asp-controller="Staff"
                               asp-route-id="@item.CustomerID">Edit</a> |
                            <a asp-action="Details" asp-controller="Staff"
                               asp-route-id="@item.CustomerID">Details</a> |
                            <a asp-action="Delete" asp-controller="Staff"
                               asp-route-id="@item.CustomerID">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <span style="color:red">No record found!</span>
}
